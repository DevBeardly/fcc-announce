<% include ../partials/header %>

<div class='container'>
  <h1 style='text-align: center'>Edit User: <%= user.fullname %></h1>
  <div class='row'>
  
    <div style='width: 45%; margin: 15px auto;'>
      <h5>Changing your email will require you to log back in.</h5>
      <form action='/user/edit/<%= user._id %>?_method=PUT' method='POST'>
        <div class='form-group'>
          <label>Email:</label>
          <input class='form-control' type='text' name='user[username]' value='<%= user.username %>'>
        </div>
        <div class='form-group'>
          <label>Full Name:</label>
          <input class='form-control' type='text' name='user[fullname]' value='<%= user.fullname %>'>
        </div>
        <div class='form-group'>
          <button class='btn btn-lg btn-primary btn-block'>Submit!</button>
        </div>
      </form>
      <a href='/user'>Go Back</a>
    </div>
    
  </div>
</div>


<% include ../partials/footer %>