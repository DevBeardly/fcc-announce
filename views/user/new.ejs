<% include ../partials/header %>

<div class='container'>
  <h1 style='text-align: center'>Add A New User</h1>
  <div class='row'>

    <div style='width: 45%; margin: 15px auto;'>
      <form action="/user" method="POST">
        <div class='form-group'>
          <label>Email Address</label>
          <input class='form-control' type='text' name='username' placeholder='email'>
        </div>
        <div class='form-group'>
          <label>Password</label>
          <input class='form-control' type='password' name='password' placeholder='password'>
        </div>
        <div class='form-group'>
          <label>Full Name</label>
          <input class='form-control' type="text" name="fullname" placeholder="full name">
        </div>
        <div class='form-group'>
            <label>Role</label>
            <p><input type="checkbox" name="isEditor" value="true"> Editor?</p>
            <p><input type="checkbox" name="isAdmin" value="true"> Admin?</p>
          </div>
        <div class='form-group'>
          <button class='btn btn-lg btn-primary btn-block'>Add User</button>
        </div>
      </form>
    <a href='/admin/users'>Go Back</a>
  </div>

  </div>
</div>

<% include ../partials/footer %>