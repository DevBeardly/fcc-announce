<% include partials/header %>

<div class='container'>
  <h1 style='text-align: center'>Edit User: <%= user.fullname %></h1>
  <div class='row'>
  
    <div style='width: 45%; margin: 15px auto;'>
      <form action='/user/<%= user._id %>?_method=PUT' method='POST'>
        <div class='form-group'>
          <input class='form-control' type='text' name='user[username]' value='<%= user.username %>'>
        </div>
        <div class='form-group'>
          <input class='form-control' type='text' name='user[fullname]' value='<%= user.fullname %>'>
        </div>
        <div class='form-group'>
          <button class='btn btn-lg btn-primary btn-block'>Submit!</button>
        </div>
      </form>
      <a href='/admin/users'>Go Back</a>
    </div>
    
  </div>
</div>


<% include partials/footer %>
