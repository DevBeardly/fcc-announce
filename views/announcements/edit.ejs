<% include ../partials/header %>

<div class='container'>
  <h1 style='text-align: center'>Edit Announcement: <%= announcement.title %></h1>
  <div class='row'>

    <div style='width: 45%; margin: 15px auto;'>
    <form action='/announcements/<%= announcement._id %>?_method=PUT' method='POST'>
      <div class='form-group'>
        <input class='form-control' type='text' name='announcement[title]' value='<%= announcement.title %>'>
      </div>
      <div class='form-group'>
        <input class='form-control' type='text' name='announcement[image]' value='<%= announcement.image %>'>
      </div>
      <div class='form-group'>
        <input class='form-control' type='text' name='announcement[description]' value='<%= announcement.description %>'>
      </div>
      <div class='form-group'>
        <button class='btn btn-lg btn-primary btn-block'>Submit!</button>
      </div>
    </form>
    <a href='/admin/announcements'>Go Back</a>
  </div>

  </div>

</div>

<% include ../partials/footer %>
