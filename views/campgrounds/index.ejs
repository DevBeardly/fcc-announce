<% include ../partials/header %>

<div class='container'>

  <header class='jumbotron'>
    <div class='container'>
      <h1>This is the campgrounds page!</h1>
      <p>View our hand-picked campgrounds from all over the world</p>
      <a class='btn btn-primary btn-lg' href='/campgrounds/new'>Add New Campground</a>
    </div>
  </header>

  <h3>Our Most Popular Campgrounds</h3>

  <div class='row text-center' style='display:flex; flex-wrap: wrap;'>
  <% campgrounds.forEach(function(campground){ %>
    <div class='col-md-3 col-sm-6'>
      <div class='card'>
        <img class='card-img-top' src='<%= campground.image %>'>
        <div class='card-body'>
          <h5 class='card-title'><%= campground.name %></h5>
          <p class='card-text'><a href='/campgrounds/<%= campground._id %>' class='btn btn-primary'>More Info</a></p>
        </div>
      </div>
    </div>
  <% }); %>
  </div>

</div> <!-- </container> -->

<% include ../partials/footer %>
